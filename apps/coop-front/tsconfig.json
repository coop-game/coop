{
  "extends": "@coop/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@theme/*": ["src/theme/*"],
      "@styles/*": ["styles/*"],
      "@pages/*": ["pages/*"],
      "@types/*": ["types/*"]
    },
    "jsxImportSource": "@emotion/react"
  },
  "include": [
    "types",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-sitemap.config.js"
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../../packages/coop-draw" },
  ]
}
